<div class="container">
  <div class="heading">
    <h1 class="title has-text-centered">{{sectionTitle}}</h1>
  </div>
  <br>
  <div class="content">
      <p>{{sectionDescription}}</p>
      {{#each links as |link|}}
        <div class="box">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <img src="http://placehold.it/128x128" alt="Image">
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><a href={{link.url}} target="_blank">{{link.title}}</a></strong>
                  <br>
                  {{link.description}}
                </p>
              </div>
            </div>
          </article>
        </div>
      {{/each}}
  </div>
</div>
<hr>
{{yield}}
